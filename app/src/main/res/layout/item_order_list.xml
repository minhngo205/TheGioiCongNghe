<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginBottom="2dp"
    android:background="@color/white"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_product"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/tv_product_name"
        android:scaleType="fitCenter"
        android:src="@mipmap/img_1" />

    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/tv_product_price"
        android:layout_toEndOf="@+id/iv_product"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="6dp"
        android:text="Tên sản phẩm"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_display_price"
        android:layout_toEndOf="@+id/iv_product"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="6dp"
        android:text="Tổng giá:"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_display_price"
        android:layout_alignParentEnd="true"
        android:padding="6dp"
        android:text="5"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_product_evaluate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_product"
        android:layout_marginStart="6dp"
        android:layout_toEndOf="@id/iv_product"
        android:background="@drawable/corner_submit_type"
        android:paddingHorizontal="15dp"
        android:paddingVertical="2dp"
        android:text="1000"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_display_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_product_price"
        android:layout_alignParentEnd="true"
        android:paddingHorizontal="6dp"
        android:text="Số lượng:"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:paddingHorizontal="6dp"
        android:paddingTop="6dp"
        android:text="Giá bán"
        android:textColor="@color/red"
        android:textSize="14sp" />
</RelativeLayout>