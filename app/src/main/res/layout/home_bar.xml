<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="8dp">

    <LinearLayout android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingEnd="10dp"
        android:layout_height="55dp"
        android:background="@color/home_bar_bgd"
        tools:ignore="RtlSymmetry">

        <ImageView
            android:id="@+id/iv_interest_kits"
            android:src="@mipmap/logo"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:padding="10dp"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="55dp">

            <View
                android:id="@+id/bar_search"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:background="@drawable/search_icon_drawable" />

            <ImageView
                android:layout_alignBottom="@+id/bar_search"
                android:id="@+id/image_search"
                android:src="@mipmap/icon_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_alignTop="@+id/bar_search"
                android:layout_alignStart="@+id/bar_search"/>

            <ImageView
                android:id="@+id/iv_voice"
                android:src="@mipmap/icon_voice"
                android:layout_centerVertical="true"
                android:layout_alignEnd="@+id/bar_search"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:padding="15dp"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_take_photo"
            android:src="@mipmap/icon_take_photo"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="10dp"
            android:padding="10dp"/>

        <ImageView
            android:id="@+id/iv_cart"
            android:src="@mipmap/shopping_cart"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:padding="12dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>