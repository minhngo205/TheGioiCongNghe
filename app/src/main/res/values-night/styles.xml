<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Main_AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Prevent the control from hitting the status bar -->
        <item name="android:fitsSystemWindows">true</item>
    </style>
    <!-- vertical division  -->
    <style name="common_vertical_division_line_style">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@color/product_text</item>
    </style>

    <style name="Heading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/base</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="MaterialButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:paddingTop">@dimen/spacing_standard</item>
        <item name="android:paddingBottom">@dimen/spacing_standard</item>
        <item name="android:paddingStart">@dimen/spacing_standard</item>
        <item name="android:paddingEnd">@dimen/spacing_standard</item>
        <item name="android:theme">@style/Theme.MaterialComponents.Light</item>
        <item name="cornerRadius">@dimen/spacing_xlarge</item>
    </style>

    <style name="MaterialButtonStyle.Filled">
        <item name="backgroundTint">@color/red_type_2</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="MaterialButtonStyle.Stroked">
        <item name="backgroundTint">@color/white</item>
        <item name="strokeColor">@color/colorAccent</item>
        <item name="strokeWidth">@dimen/stroke_width</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="dialog" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="RatingText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:drawableEnd">@drawable/ic_star_black</item>
        <item name="android:drawablePadding">@dimen/spacing_control</item>
        <item name="android:drawableTint" tools:targetApi="m">@color/yellow</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>

    <style name="RatingSeekBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_6sdp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:enabled">false</item>
        <item name="android:thumb">@null</item>
    </style>

    <style name="RatingSubText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>

    <style name="RecycleView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="OrderTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/spacing_control</item>
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>

    <style name="BottomButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/_14sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
    </style>

    <style name="BottomButton.Primary">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/red_type_2</item>
    </style>

    <style name="TextInputLayoutStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingStart">@dimen/spacing_control_half</item>
        <item name="android:paddingEnd">@dimen/spacing_control_half</item>
        <item name="android:layout_marginStart">@dimen/spacing_standard_new</item>
    </style>

    <style name="TextInputEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingStart">@dimen/spacing_standard_new</item>
        <item name="android:padding">@dimen/spacing_middle</item>
        <item name="android:layout_marginTop">@dimen/_7sdp</item>
        <item name="android:background">@drawable/bg_rounded_border_edittext</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--payment succeed-->
    <style name="paymentSucceedText1">
        <item name="android:textColor">@color/payment_succeed_text3</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="paymentSucceedText2">
        <item name="android:textColor">@color/payment_succeed_text4</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/tab_bgd_color_selected</item>
        <item name="colorControlActivated">@color/background_button_default</item>
    </style>

    <style name="MyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_style_selector</item>
    </style>
</resources>
